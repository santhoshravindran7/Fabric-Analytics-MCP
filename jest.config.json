{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.ts",
    "**/tests/**/*.test.js"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
      }
    }]
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "testTimeout": 10000
}
