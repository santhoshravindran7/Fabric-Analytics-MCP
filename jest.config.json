{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.ts",
    "**/tests/**/*.test.js"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true,
      "tsconfig": {
        "module": "ESNext",
        "moduleResolution": "node"
      }
    }]
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "testTimeout": 10000
}
