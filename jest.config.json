{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.ts",
    "**/tests/**/*.test.js"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "moduleFileExtensions": ["ts", "js", "json"],
  "testTimeout": 10000
}
